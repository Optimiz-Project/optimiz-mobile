<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Optimiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryVariant">@color/my_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_secondary</item>
        <item name="colorSecondaryVariant">@color/my_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- status bar color. -->
        <item name="android:statusBarColor">@color/my_primary</item>
    </style>
    <style name="Theme.Optimiz" parent="Base.Theme.Optimiz" />

    <style name="Theme.App.Splashscreen" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenAnimatedIcon">@drawable/optimizlogo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Optimiz</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/my_primary</item>
    </style>

</resources>